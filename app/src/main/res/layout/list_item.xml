<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/rl_social_item"
  android:layout_width="match_parent"
  android:layout_height="300dp"
  android:layout_marginTop="15dp"
  android:background="#266FA6"
  android:orientation="vertical">


  <LinearLayout
    android:id="@+id/layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"

    app:layout_constraintTop_toBottomOf="@+id/cardView">


    <LinearLayout
      android:id="@+id/layout_fund"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.25"
      android:gravity="center"

      android:orientation="vertical">


      <TextView
        android:id="@+id/textView_fund_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="₹500"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintVertical_bias="0.100000024" />
      <TextView
        android:id="@+id/textView_fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/label_fund"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView_fund_price"

        app:layout_constraintVertical_bias="0.13999999" />


    </LinearLayout>


    <LinearLayout
      android:id="@+id/layout_goals"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.25"
      android:gravity="center"


      android:orientation="vertical">


      <TextView
        android:id="@+id/textView_goals_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="₹5000"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintVertical_bias="0.100000024" />
      <TextView
        android:id="@+id/textView_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/lbl_goals"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_goals_price"

        app:layout_constraintVertical_bias="0.13999999" />


    </LinearLayout>


    <LinearLayout
      android:id="@+id/layout_ends"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.25"
      android:gravity="center"

      android:orientation="vertical">


      <TextView
        android:id="@+id/textView_goals_ends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="36"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:layout_constraintVertical_bias="0.100000024" />
      <TextView
        android:id="@+id/textView_ends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/lbl_ends"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView_goals_ends"

        app:layout_constraintVertical_bias="0.13999999" />


    </LinearLayout>


    <LinearLayout
      android:id="@+id/layout_pledge"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.25"
      android:gravity="center"

      android:orientation="vertical">


      <TextView
        android:id="@+id/textView_pledge"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center|center_vertical"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-black"
        android:gravity="center|center_vertical"
        android:text="@string/pledge"
        android:textColor="#7DA9D3"
        android:textSize="11sp"
        android:visibility="visible"
        app:layout_constraintHorizontal_weight="0.25"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="52dp"


        />


    </LinearLayout>


  </LinearLayout>


  <ImageView
    android:id="@+id/imageView_back"
    android:layout_width="0dp"
    android:layout_height="180dp"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/place_holder" />


  <androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="280dp"
    android:layout_height="80dp"
    android:visibility="visible"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="6dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.17"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.57">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

      <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Smile"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView_like"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />
      <ImageView
        android:id="@+id/imageView_like"
        android:layout_width="24dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:srcCompat="@drawable/heart" />
      <TextView
        android:id="@+id/textView_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="this function bring smilefvsdfsdfsdfsdfsdfsdsdfsdfdsfdsfsdsfdsfdsfsdfsdfsfs"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


  </androidx.cardview.widget.CardView>


  <TextView
    android:id="@+id/textView_per"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/circle_drawable"
    android:gravity="center"
    android:text="100%"
    android:textColor="@color/white"
    android:textSize="11sp"
    android:visibility="visible"
    app:layout_constraintBottom_toTopOf="@+id/layout_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/cardView"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.86" />


</androidx.constraintlayout.widget.ConstraintLayout>